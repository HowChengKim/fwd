.login-box
  padding 10px
  background-color white
  .login-button
    width 170px
    height 42px
    background inherit
    background-color rgba(16, 142, 233, 1)!important
    font-size 14px!important
    border-radius 4px!important
    padding 15px 40px!important
    margin 20px 0 20px 50%!important
    transform translateX(-50%)
    color white
.btn.active,
.btn:active,
.btn:hover
  color white!important
.reader-box
  display flex
  flex-flow row nowrap
  justify-content center
  >span
    height 35px
    line-height 1.5
    color #FF6600
    font-size 15px
  >label
    font-size 13px
    width 80px
    >input
      float left
      margin-top 6px!important