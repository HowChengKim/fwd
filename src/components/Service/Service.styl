@import "../../assets/styles/font/iconfont.css"
.service-container
  border:1px solid #333
  margin 10px  20px
  padding 15px 0 0
  >p
    font-size 12px
    text-align center
    margin-bottom 15px
  .service-phone-box
    overflow hidden
    .phone-time
      float left
      width 100px
      margin-left 10px
      >.icon-dianhua
        font-size 30px
        float left
      >span
        width 66px
        height 22px
        float right
        text-align center
        line-height 1.5
        &:nth-child(2)
         line-height 3
    .phone-msg
      float right
      font-size 19px
      margin 0
      line-height 2
      text-align center
      width 220px
      font-weight normal