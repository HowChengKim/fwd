.step-container
  padding 10px
  background-color white
  .step-group
    width 100%
    position relative
    padding-left 30px
    overflow hidden
    &:last-child
      &:after
        width 0
    &:after
      content ''
      position absolute
      left 15px
      top 30px
      width:1px; /*no*/
      height 100%
      background-color #333
    .step-point
      width 30px
      height 30px
      position absolute
      top 0
      left 0
      font-size 20px
      border-radius 1000px
      background-color #0e90d2
      color white
      text-align center
      line-height 1.4
    >h3
      font-weight normal
      font-size 20px
      margin 5px
    >div
      background-color #eee
      margin-left 5px
      margin-bottom 5px
      padding 15px 4px
    >p
      position absolute
      top 5px
      right 30px
      font-size 14px
      margin 0
      color #666
